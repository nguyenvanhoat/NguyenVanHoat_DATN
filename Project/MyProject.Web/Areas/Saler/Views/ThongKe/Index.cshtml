@using MyProject.Data.EF
@inject AppDbContext context


@{
    int donhang = context.Orders.ToList().Count();
    int hangXe = context.Shops.ToList().Count();
    int xe = context.Products.ToList().Count();
    int tk = context.Users.ToList().Count();
}
